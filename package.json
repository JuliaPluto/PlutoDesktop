{
  "description": "Desktop application for running Pluto notebooks",
  "keywords": [
    "pluto",
    "julia"
  ],
  "homepage": "https://github.com/JuliaPluto/PlutoDesktop",
  "bugs": {
    "url": "https://github.com/JuliaPluto/PlutoDesktop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JuliaPluto/PlutoDesktop.git"
  },
  "license": "MIT",
  "author": {
    "name": "Pluto Developers",
    "url": "https://plutojl.org"
  },
  "contributors": [
    {
      "name": "Dhruv Tiwari",
      "url": "https://github.com/illusion47586"
    },
    {
      "name": "Connor Burns",
      "url": "https://github.com/ctrekker"
    }
  ],
  "main": "./src/main/main.ts",
  "scripts": {
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps",
    "package": "electron-builder build --publish never",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "start": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only ."
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "dependencies": {
    "@electron/notarize": "^1.2.3",
    "axios": "^0.27.2",
    "electron-debug": "^3.2.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.2.1",
    "msgpack-lite": "^0.1.26",
    "util": "^0.12.4"
  },
  "devDependencies": {
    "@types/detect-port": "^1.3.2",
    "@types/msgpack-lite": "^0.1.8",
    "@types/node": "18.7.15",
    "axios-logger": "^2.6.1",
    "chalk": "4.1.2",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "detect-port": "^1.3.0",
    "electron": "^24.8.5",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-rebuild": "^3.2.9",
    "electronmon": "^2.0.2",
    "extract-zip": "^2.0.1",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^13.0.3",
    "nanospinner": "^1.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "build": {
    "productName": "Pluto",
    "appId": "org.pluto.desktop",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "fileAssociations": [
      {
        "name": "Pluto Notebook",
        "ext": [
          "pluto.jl",
          "Pluto.jl",
          "nb.jl",
          "jl",
          "plutojl",
          "pluto",
          "nbjl",
          "pljl",
          "pluto.jl.txt",
          "jl.txt"
        ],
        "role": "Editor"
      }
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "runAfterFinish": true
    },
    "protocols": {
      "name": "pluto-desktop",
      "schemes": [
        "pluto"
      ]
    },
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "beforePack": ".erb/scripts/beforePack.js",
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**",
      "./!assets/*.zip",
      "./!assets/pluto_precompile.jl"
    ],
    "publish": {
      "provider": "github",
      "owner": "JuliaPluto",
      "repo": "PlutoDesktop"
    }
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/*"
    ],
    "logLevel": "quiet"
  }
}
