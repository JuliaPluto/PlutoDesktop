{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["dom", "es2022"],
    "declaration": true,
    "declarationMap": true,
    "strict": false,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["test", "release/build", "release/app/dist", "bundler/dll"]
}
